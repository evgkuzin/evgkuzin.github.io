@model Airport.WebUI.Models.Passenger

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация пассажира</h2>

@using (Html.BeginForm("Booking","Registration", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Введите данные пассажира и выберите рейс</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        Выберите рейс:
        <div class="col-md-10">
            @Html.ListBox("flightId", (IEnumerable<SelectListItem>)ViewBag.selectList, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        Дата вылета:
        <div class="col-md-10">
            <input id="dateVal" name="dateVal" type="date" class="datepicker" />
        </div>
    </div>

    <div class="form-group">
        Багаж (помимо ручной клади)
        <div class="col-md-10">
            <input id="bagagge" name="bagagge" type="checkbox" value="1" />
        </div>
    </div>

    <div class="form-group">
        Фамилия:
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Имя:
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Отчество:
        <div class="col-md-10">
            @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Паспорт:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Passport, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Passport, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Зарегистрировать" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
